#!/usr/bin/env ruby

require_relative '../config/environment'

puts "Welcome to Tic Tac Toe"
puts "How many players? Enter 0: 1: or 2:"
players = gets.strip
until players == "0" || players == "1" || players == "2" || players == "q"
  puts "Please enter 0: 1: or 2: If you would like to quit, type q"
  players = gets.strip
end
if players == "0"
  board = Board.new
  player_1 = Players::Computer.new("X")
  player_2 = Players::Computer.new("O")
  game = Game.new(player_1, player_2, board)
    game.play
elsif players == "1"
  puts "Who would you like the cpu to go first? yes: no:"
  first = gets.slice(0).downcase
  until first == "y" || first == "n" || first == "q"
    puts "Please enter yes: no: or type q: if you want to quit"
    first = gets.slice(0).downCase
  end
  if first == "yes"
    board = Board.new
    player_1 = Players::Computer.new("X")
    player_2 = Players::Human.new("O")
    game = Game.new(player_1, player_2, board)
      game.play
   elsif first == "no"
     board = Board.new
     player_1 = Players::Human.new("X")
     player_2 = Players::Computer.new("O")
     game = Game.new(player_1, player_2, board)
       board.display
       game.play
    end
  elsif players == "2"
    board = Board.new
    player_1 = Players::Human.new("X")
    player_2 = Players::Human.new("O")
    game = Game.new(player_1, player_2, board)
    puts "Player 1: Start"
      board.display
      game.play
  end
